---
import IndexLayout from '@/layouts/IndexLayout.astro'
import { themeConfig } from '@/config'
---

<IndexLayout
  title={`Analytics Â· ${themeConfig.site.title}`}
  description="Site analytics and statistics"
>
  <div class="analytics-page">
    <h1>Analytics</h1>

    <div class="stats-section">
      <h2>humans</h2>
      <div class="stats-grid">
        <div class="stat-card">
          <span class="stat-label">today:</span>
          <span class="stat-value" id="human-today">...</span>
          <span class="stat-label">(<span id="human-today-unique">...</span> unique)</span>
        </div>
        <div class="stat-card">
          <span class="stat-label">all time:</span>
          <span class="stat-value" id="human-all">...</span>
          <span class="stat-label">(<span id="human-all-unique">...</span> unique)</span>
        </div>
      </div>
    </div>

    <div class="stats-section">
      <h2>bots</h2>
      <div class="stats-grid">
        <div class="stat-card">
          <span class="stat-label">today:</span>
          <span class="stat-value" id="bot-today">...</span>
        </div>
        <div class="stat-card">
          <span class="stat-label">all time:</span>
          <span class="stat-value" id="bot-all">...</span>
        </div>
      </div>
    </div>

    <div class="stats-section">
      <h2>total</h2>
      <div class="stats-grid">
        <div class="stat-card">
          <span class="stat-label">today:</span>
          <span class="stat-value" id="today-views">...</span>
          <span class="stat-label">(<span id="today-unique">...</span> unique)</span>
        </div>
        <div class="stat-card">
          <span class="stat-label">all time:</span>
          <span class="stat-value" id="all-views">...</span>
          <span class="stat-label">(<span id="all-unique">...</span> unique)</span>
        </div>
      </div>
    </div>

    <h2>top pages</h2>
    <div class="top-pages" id="top-pages">
      <p class="loading">loading...</p>
    </div>
  </div>
</IndexLayout>

<script>
  async function loadAnalytics() {
    try {
      const response = await fetch('/api/analytics');
      if (response.ok) {
        const data = await response.json();

        // Human stats
        const humanTodayEl = document.getElementById('human-today');
        const humanTodayUniqueEl = document.getElementById('human-today-unique');
        const humanAllEl = document.getElementById('human-all');
        const humanAllUniqueEl = document.getElementById('human-all-unique');

        if (humanTodayEl) humanTodayEl.textContent = data.humanToday?.toLocaleString() || '0';
        if (humanTodayUniqueEl) humanTodayUniqueEl.textContent = data.uniqueHumanToday?.toLocaleString() || '0';
        if (humanAllEl) humanAllEl.textContent = data.humanAllTime?.toLocaleString() || '0';
        if (humanAllUniqueEl) humanAllUniqueEl.textContent = data.uniqueHumanAllTime?.toLocaleString() || '0';

        // Bot stats
        const botTodayEl = document.getElementById('bot-today');
        const botAllEl = document.getElementById('bot-all');

        if (botTodayEl) botTodayEl.textContent = data.botToday?.toLocaleString() || '0';
        if (botAllEl) botAllEl.textContent = data.botAllTime?.toLocaleString() || '0';

        // Total stats
        const todayEl = document.getElementById('today-views');
        const todayUniqueEl = document.getElementById('today-unique');
        const allEl = document.getElementById('all-views');
        const allUniqueEl = document.getElementById('all-unique');

        if (todayEl) todayEl.textContent = data.today?.toLocaleString() || '0';
        if (todayUniqueEl) todayUniqueEl.textContent = data.uniqueToday?.toLocaleString() || '0';
        if (allEl) allEl.textContent = data.allTime?.toLocaleString() || '0';
        if (allUniqueEl) allUniqueEl.textContent = data.uniqueAllTime?.toLocaleString() || '0';
      }
    } catch (error) {
      console.debug('Failed to load analytics:', error);
    }
  }

  async function loadTopPages() {
    try {
      const response = await fetch('/api/analytics/top');
      const container = document.getElementById('top-pages');

      if (response.ok && container) {
        const data = await response.json();

        if (data.pages && data.pages.length > 0) {
          container.innerHTML = data.pages.map((page: { path: string; views: number; unique: number }, i: number) => `
            <div class="page-row">
              <span class="page-rank">${i + 1}</span>
              <a href="${page.path}" class="page-path">${page.path}</a>
              <span class="page-views">${page.views} views</span>
              <span class="page-unique">${page.unique} unique</span>
            </div>
          `).join('');
        } else {
          container.innerHTML = '<p class="no-data">No page data yet</p>';
        }
      }
    } catch (error) {
      const container = document.getElementById('top-pages');
      if (container) container.innerHTML = '<p class="no-data">Failed to load</p>';
    }
  }

  // Load on initial page load
  loadAnalytics();
  loadTopPages();

  // Re-load on View Transitions navigation
  document.addEventListener('astro:page-load', () => {
    loadAnalytics();
    loadTopPages();
  });
</script>

<style>
  .analytics-page {
    max-width: 100%;
  }

  h1 {
    font-size: 1rem;
    margin-bottom: 0.75rem;
    font-weight: var(--font-weight-bold);
  }

  h2 {
    font-size: 0.85rem;
    margin: 1.25rem 0 0.5rem;
    color: var(--text-secondary);
  }

  .stats-section h2 {
    margin-top: 0;
    margin-bottom: 0.3rem;
  }

  .stats-section {
    margin-bottom: 0.75rem;
  }

  .stats-grid {
    display: flex;
    flex-wrap: wrap;
    gap: 1.5rem;
  }

  .stat-card {
    display: flex;
    align-items: baseline;
    gap: 0.35rem;
  }

  .stat-label {
    font-size: 0.8rem;
    color: var(--text-secondary);
  }

  .stat-value {
    font-size: 0.9rem;
    font-weight: var(--font-weight-bold);
  }

  .stat-sub {
    display: none;
  }

  .top-pages {
    display: flex;
    flex-direction: column;
  }

  .page-row {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.2rem 0;
    font-size: 0.85rem;
  }

  .page-rank {
    color: var(--text-tertiary);
    font-size: 0.75rem;
    width: 1.25rem;
  }

  .page-path {
    flex: 1;
    color: var(--text-primary);
    text-decoration: none;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  .page-path:hover {
    text-decoration: underline;
  }

  .page-views, .page-unique {
    font-size: 0.75rem;
    color: var(--text-secondary);
    white-space: nowrap;
  }

  .loading, .no-data {
    color: var(--text-secondary);
    font-size: 0.85rem;
  }
</style>
