---
import { themeConfig } from '@/config'
import { ViewTransitions } from 'astro:transitions'
import ThemeManager from '@/components/ui/ThemeManager.astro'
import FaviconThemeSwitcher from '@/components/ui/FaviconThemeSwitcher.astro'
import TransitionWrapper from '@/components/layout/TransitionWrapper.astro'
import BlogTree from '@/components/widgets/BlogTree.astro'
import Footer from '@/components/layout/Footer.astro'
import SearchModal from '@/components/ui/SearchModal.astro'
import ImageViewer from '@/components/ui/ImageViewer.astro'
import AnalyticsProbe from '@/components/widgets/AnalyticsProbe.astro'
import { getSortedFilteredPosts } from '@/utils/draft'
import type { LayoutProps } from '@/types'

const { type = 'page' } = Astro.props as LayoutProps
const language = themeConfig.site.language || 'en-US'
const fadeAnimation = themeConfig.general.fadeAnimation

const posts = await getSortedFilteredPosts()
---

<html lang={language}>
  <head>
    <ThemeManager />
    <ViewTransitions />
    <slot name="head" />
  </head>
  <body data-centered={themeConfig.general.centeredLayout} class="fonts-loading">
    <FaviconThemeSwitcher />

    <script is:inline>
      // Wait for fonts to load before showing content (prevents horizontal jank)
      function showContent() {
        document.body.classList.remove('fonts-loading');
        document.body.classList.add('fonts-loaded');
      }

      function initFontLoading() {
        if (document.fonts && document.fonts.ready) {
          // Show content when fonts are ready, or after 300ms max
          Promise.race([
            document.fonts.ready,
            new Promise(resolve => setTimeout(resolve, 300))
          ]).then(showContent);
        } else {
          // Fallback for browsers without font loading API
          showContent();
        }
      }

      // Run on initial load
      initFontLoading();

      // Run after View Transitions swap
      document.addEventListener('astro:after-swap', initFontLoading);
    </script>

    <div class="site-grid">
      <div class="layout-wrapper">
        <div class="two-col-grid">
          <aside class="sidebar-area" transition:persist="sidebar">
            <BlogTree posts={posts} />
          </aside>
          {fadeAnimation ? (
            <TransitionWrapper type={type} class="content-area">
              <slot />
            </TransitionWrapper>
          ) : (
            <main class="content-area">
              <slot />
            </main>
          )}
        </div>
      </div>
      {themeConfig.general.footer && (
        <div class="footer-wrapper">
          <Footer />
        </div>
      )}
    </div>
    <ImageViewer />
    <SearchModal />
    <AnalyticsProbe />
  </body>
</html>

<style is:global>
  /* Clean Layout System */

  .site-grid {
    width: 100%;
    height: 100%;
    overflow-y: auto;
    overflow-x: hidden;
    overscroll-behavior: none;
    -webkit-overflow-scrolling: auto;
    padding: 4rem 0 1.5rem 0;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
  }

  .site-grid > * {
    flex-shrink: 0;
  }

  @media (min-width: 769px) {
    .site-grid {
      padding-top: 6rem;
    }
  }

  .layout-wrapper {
    flex: 1;
  }

  /* Two Column Layout */
  .two-col-grid {
    display: flex;
    flex-direction: column;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
    box-sizing: border-box;
  }

  /* Sidebar */
  .sidebar-area {
    order: 2;
    margin-top: 2rem;
    padding-top: 1.5rem;
    border-top: 1px solid var(--border);
  }

  /* Main Content */
  .content-area {
    order: 1;
    flex: 1;
    min-width: 0;
  }

  /* Medium+ screens: side by side */
  @media (min-width: 900px) {
    .two-col-grid {
      flex-direction: row;
      padding: 0 2rem;
      align-items: flex-start;
      justify-content: center;
      margin-left: auto;
      margin-right: auto;
    }

    .sidebar-area {
      order: 1;
      width: 300px;
      flex-shrink: 0;
      margin-top: 0;
      padding-top: 0;
      border-top: none;
      position: fixed;
      top: 6rem;
      left: max(2rem, calc(50% - 600px + 2rem));
      max-height: calc(100vh - 8rem);
      overflow-y: auto;
      overflow-x: hidden;
      overscroll-behavior: none;
    }

    .content-area {
      order: 2;
      width: 65ch;
      flex-shrink: 0;
      margin-left: calc(300px + 4rem);
    }
  }

  /* Large screens: wider content */
  @media (min-width: 1200px) {
    .sidebar-area {
      width: 320px;
    }

    .content-area {
      width: 75ch;
      margin-left: calc(320px + 5rem);
    }
  }

  /* Footer */
  .footer-wrapper {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  @media (min-width: 900px) {
    .footer-wrapper {
      padding: 0 2rem;
    }
  }

</style>