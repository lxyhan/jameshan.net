---
import { themeConfig } from '@/config'
import ThemeToggle from '@/components/ui/ThemeToggle.astro'
---

<header>
  <nav>
    <a href="/" class="site-title">
      <div class="profile-container">
        <div class="profile-pics">
          <img src="/profile1.png" alt="Profile 1" class="profile-pic" />
          <img src="/profile2.png" alt="Profile 2" class="profile-pic" />
          <img src="/profile3.png" alt="Profile 3" class="profile-pic" />
          <img src="/profile4.png" alt="Profile 4" class="profile-pic" />
        </div>
        <div class="text-container">
          <span class="name">{themeConfig.site.title}</span>
          <div class="subtitle-container">
            <span class="subtitle">Computer Science, Statistics, Economics</span>
            <span class="subtitle">Undergraduate, University of Toronto St. George, Class of 2028</span>
          </div>
        </div>
      </div>
    </a>
    <ThemeToggle />
  </nav>
</header>
<style>
  header {
    margin: 0;
  }
  nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .site-title {
    color: var(--text-primary);
    text-decoration: none;
    display: block;
  }
  .profile-container {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 0.75rem;
  }
  .profile-pics {
    display: flex;
    gap: 0.5rem;
  }
  .profile-pic {
    width: 10rem;
    height: 10rem;
    object-fit: cover;
    display: block;
  }
  .text-container {
    display: flex;
    flex-direction: column;
    gap: 0.15rem;
  }
  .name {
    font-size: var(--font-size-l);
    font-weight: var(--font-weight-regular);
  }
  .subtitle-container {
    display: flex;
    flex-direction: column;
    gap: 0.1rem;
  }
  .subtitle {
    font-size: var(--font-size-s);
    font-weight: var(--font-weight-regular);
  }
</style>
