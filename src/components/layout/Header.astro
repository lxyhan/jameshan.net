---
import { themeConfig } from '@/config'
import ThemeToggle from '@/components/ui/ThemeToggle.astro'
---

<header>
  <nav>
    <div class="profile-container">
      <div class="profile-pics">
        <img src="/images/site/profile1.png" alt="Profile 1" class="profile-pic" data-preview="true" />
        <img src="/images/site/profile3.png" alt="Profile 3" class="profile-pic" data-preview="true" />
        <img src="/images/site/profile4.png" alt="Profile 4" class="profile-pic" data-preview="true" />
        <img src="/images/site/profile8.png" alt="Profile 8" class="profile-pic" data-preview="true" />
      </div>
      <div class="name-row">
        <span class="name">{themeConfig.site.title}</span>
        <div class="toggle-group">
          <ThemeToggle />
        </div>
      </div>
      <div class="subtitle-container">
        <span class="subtitle">Computer Science and Statistics</span>
        <span class="subtitle">Undergraduate Student, University of Toronto, Class of 2027</span>
      </div>
    </div>
  </nav>
</header>
<style>
  header {
    margin: 0;
  }
  nav {
    display: flex;
    align-items: center;
  }
  .site-title {
    color: var(--text-primary);
    text-decoration: none;
    display: block;
  }
  .profile-container {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 0.5rem;
  }
  .profile-pics {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 0.5rem;
    width: 100%;
    max-width: 100%;
  }
  .profile-pic {
    width: 100%;
    aspect-ratio: 1;
    object-fit: cover;
    display: block;
    cursor: pointer !important;
  }
  
  @media (min-width: 768px) {
    .profile-pics {
      grid-template-columns: repeat(4, 1fr);
      max-width: 100%;
    }
  }
  .name-row {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }
  
  .toggle-group {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
  
  .profile-pics-link {
    display: block;
    text-decoration: none;
  }
  
  .name {
    font-size: 1.25rem;
    font-weight: 500;
  }
  .subtitle-container {
    display: flex;
    flex-direction: column;
    gap: 0;
    margin-top: -0.25rem;
  }
  .subtitle {
    font-size: 0.85rem;
    font-weight: 400;
    line-height: 1.4;
    color: var(--text-primary);
  }
</style>
